{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.0",
  "description": "Download YouTube videos as MP3 or MP4",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://img.youtube.com/*",
    "https://youtu.be/*",
    "https://*.ytimg.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}